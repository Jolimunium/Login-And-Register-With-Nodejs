<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <div class="navbar-nav">
                <a class="nav-link" href="/">Home Page</a>
            </div>
            <a class="navbar-brand mx-auto">Login Page</a>
            <div class="navbar-nav">
                <a class="btn btn-outline-success mx-2" href="/login">Login</a>
                <a class="btn btn-success" href="/register">Register</a>
            </div>
        </div>
    </nav>
    <div class="d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 56px);">
        <div class="card shadow p-4" style="width: 350px;">
            <h3 class="text-center mb-3">Login</h3>
            <% if (typeof Login_message !== 'undefined') { %>
                <p style="color: red;"><%= Login_message %></p>
            <% } %>

            <form action="/login" method="POST" id="">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
        </div>
    </div>
</body>

</html>